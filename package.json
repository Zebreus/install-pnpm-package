{
  "name": "install-pnpm-package",
  "version": "0.1.2",
  "main": "dist/index.js",
  "license": "MIT",
  "description": "Install packages using the pnpm API",
  "author": {
    "name": "Zebreus",
    "email": "lennarteichhorn@googlemail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zebreus/install-pnpm-package"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.5",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "resolve-tspaths": "^0.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache && tsc --noEmit",
    "test": "jest",
    "postinstall": "husky install",
    "prepack": "pinst --disable && tsc --project tsconfig.build.json && resolve-tspaths -p tsconfig.build.json",
    "postpack": "pinst --enable",
    "build": "tsc --project tsconfig.build.json && resolve-tspaths -p tsconfig.build.json",
    "prepublish": "eslint --cache && tsc --noEmit"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "install",
    "add",
    "package",
    "module",
    "installer",
    "pnpm"
  ],
  "dependencies": {
    "@pnpm/config": "^15.6.1",
    "@pnpm/core": "^5.7.0",
    "@pnpm/read-project-manifest": "^3.0.6",
    "@pnpm/store-connection-manager": "^4.1.22",
    "@pnpm/write-project-manifest": "^3.0.5",
    "@pnpm/logger": "^4.0.0",
    "@yarnpkg/core": "4.0.0-rc.14"
  }
}
